  <img class='pokemonLogo' src='https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/1200px-International_Pok%C3%A9mon_logo.svg.png'>
  <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&display=swap" rel="stylesheet">

  <p class="text-center">
    <a href="/pokemon">Favorite Pokemons</a>
  </p>

  <div class="container">

  <% pokemon.forEach(function(pokemon) { %>
    <div class="cell">
      <div class='frontHeader'>
        <h2><%= pokemon.name %></h2></div>
        <% let url = pokemon.url %>
        <% let pokeIndex = url.slice(34, url.length-1) %>
        <!-- <h2>Index: <%=pokeIndex%></h2> -->
        <div>
        <img class='avatar' src=<%=`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokeIndex}.png`%>>
      </div>
      
      <form method="GET" action="/pokemon/<%=pokeIndex%>">
        <input hidden type="text" name="url" value="<%=pokeIndex%>">
        <button class="btn" type="submit">Pokemon Profile</button>
      </form>

      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn" type="submit">Catch it!</button>
      </form>

      <form method="DELETE" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn" type="submit">Release Pokemon!</button>
      </form>
    </div>
   
  <% }); %>

</div>
